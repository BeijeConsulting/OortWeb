<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
  <persistence-unit name="rubrica">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>it.beije.oort.web.model.Contatto</class>
    <class>it.beije.oort.web.model.User</class>

    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/rubrica?serverTimezone=CET"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value="Beije09"/>
    </properties>
  </persistence-unit>

  <persistence-unit name="Biblioorteca">
    <class>it.beije.oort.web.biblioteca.model.Utente</class>
