    <class>it.beije.oort.web.biblioteca.model.Editore</class>
    <class>it.beije.oort.web.biblioteca.model.Autore</class>
    <class>it.beije.oort.web.biblioteca.model.Prestito</class>

    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/biblioteca?serverTimezone=CET"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value="Beije09"/>
